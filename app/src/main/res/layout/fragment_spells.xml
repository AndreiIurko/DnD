<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/chooseKnownSpellsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Выберите известные заклинания"
        android:textSize="18sp"
        android:textAlignment="center" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chooseKnownSpellsTextView">


        <View
            android:id="@+id/dividerView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="?colorPrimary" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dividerView">

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Введите часть названия"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/searchButton"
                android:layout_marginEnd="6dp" />

            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_search_32"
                android:foreground="?attr/selectableItemBackground"
                android:background="?backgroundColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="84dp" />

            <LinearLayout
                android:id="@+id/changeListsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/searchEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/filled_border">

                <TextView
                    android:id="@+id/knownButton"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/searchEditText"
                    app:layout_constraintEnd_toStartOf="@id/allButton"
                    android:text="Выбранные"
                    android:textColor="?colorOnPrimary"
                    android:textAlignment="center"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?colorPrimary" />

                <TextView
                    android:id="@+id/allButton"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/searchEditText"
                    app:layout_constraintStart_toEndOf="@id/knownButton"
                    android:textAlignment="center"
                    android:text="Все"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spellsCountContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/changeListsButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Заклинаний:"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/knownSpellsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:layout_marginStart="4dp"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Максимум:"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/maxSpellsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:layout_marginStart="4dp"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cantripsCountContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/spellsCountContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Заговоров:"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/knownCantripsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:layout_marginStart="4dp"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Максимум:"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/maxCantripsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:layout_marginStart="4dp"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cantripsCountContainer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/spellNameText"
                    android:layout_marginStart="16dp"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:text="Имя"
                    android:textColor="?colorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/spellLevelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="уровень"
                    android:textColor="?colorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginStart="16dp"
                    android:id="@+id/spellTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="время"
                    android:textColor="?colorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/isPrepared"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="подг"
                    android:textColor="?colorPrimary"
                    android:textSize="12sp"
                    android:gravity="end"
                    android:layout_marginEnd="10dp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/spellsRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/addInfoContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttonsLayout" />

        <GridLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="1"
            android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:text="Назад"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:text="Принять"
                android:textAllCaps="false" />
        </GridLayout>

        <TextView
            android:id="@+id/filtersButton"
            android:layout_width="92dp"
            android:layout_height="23dp"
            app:layout_constraintTop_toBottomOf="@id/dividerView"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/tab_background"
            android:textAlignment="center"
            android:text="фильтр"
            android:textColor="?backgroundColor"
            android:paddingStart="20dp"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/filtersView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="5dp"
            android:padding="6dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="?backgroundColor">

            <TextView
                android:id="@+id/levelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Уровень"
                android:textSize="20sp"
                android:background="@drawable/filled_border"
                android:paddingHorizontal="10dp"
                android:layout_marginStart="12dp" />

            <TextView
                android:id="@+id/sourceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Источник"
                android:textSize="20sp"
                android:background="@drawable/filled_border"
                android:paddingHorizontal="10dp"
                android:layout_marginStart="12dp" />

            <TextView
                android:id="@+id/schoolButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Школа"
                android:textSize="20sp"
                android:background="@drawable/filled_border"
                android:paddingHorizontal="10dp"
                android:layout_marginStart="12dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/popUpBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="?attr/backgroundColor"
        tools:layout_editor_absoluteX="-45dp"
        tools:layout_editor_absoluteY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>