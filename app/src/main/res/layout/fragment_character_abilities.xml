<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="120dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/border_12"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Всего костей"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/allHitDiceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="22sp"
                    android:layout_marginBottom="8dp"
                    android:text="10к12"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:background="@color/border"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Осталось"
                    android:layout_gravity="center"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/currentHitDiceTextView"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/primary_variant"
                    android:textSize="22sp"
                    android:text="10"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:background="@color/border"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Временные хиты"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/tempHitPointsEditText"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/primary_variant"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:text="0"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/passivePerceptionContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_24_red"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintEnd_toStartOf="@id/passiveInsightContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Пассивная"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="внимательность"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/passivePerception"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="10"
                    android:textSize="26sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/passiveInsightContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_24_red"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/passivePerceptionContainer"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Пассивная"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="проницательность"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/passiveInsight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="10"
                    android:textSize="26sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <GridLayout
            android:id="@+id/skillsGridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="24dp"
            android:columnCount="3"
            android:rowCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passivePerceptionContainer">

            <LinearLayout
                android:id="@+id/strLayout"
                style="@style/AbilitiesLayoutStyle">

                <TextView
                    android:id="@+id/strTextView"
                    style="@style/Text.AbilitiesNumber" />

                <TextView
                    style="@style/Text.AbilitiesName"
                    android:text="Сил" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dexLayout"
                style="@style/AbilitiesLayoutStyle">

                <TextView
                    android:id="@+id/dexTextView"
                    style="@style/Text.AbilitiesNumber" />

                <TextView
                    style="@style/Text.AbilitiesName"
                    android:text="Лвк" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/conLayout"
                style="@style/AbilitiesLayoutStyle">

                <TextView
                    android:id="@+id/conTextView"
                    style="@style/Text.AbilitiesNumber" />

                <TextView
                    style="@style/Text.AbilitiesName"
                    android:text="Тел" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/intLayout"
                style="@style/AbilitiesLayoutStyle">

                <TextView
                    android:id="@+id/intTextView"
                    style="@style/Text.AbilitiesNumber" />

                <TextView
                    style="@style/Text.AbilitiesName"
                    android:text="Инт" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wisLayout"
                style="@style/AbilitiesLayoutStyle">

                <TextView
                    android:id="@+id/wisTextView"
                    style="@style/Text.AbilitiesNumber" />

                <TextView
                    style="@style/Text.AbilitiesName"
                    android:text="Мдр" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chaLayout"
                style="@style/AbilitiesLayoutStyle">

                <TextView
                    android:id="@+id/chaTextView"
                    style="@style/Text.AbilitiesNumber" />

                <TextView
                    style="@style/Text.AbilitiesName"
                    android:text="Хар" />
            </LinearLayout>
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Монеты"
            android:textSize="24dp"
            android:layout_marginTop="24dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/border_12"
            android:layout_marginBottom="56dp">

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="пм"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/platinumCoinsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="0"
                    android:textAlignment="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/border"/>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="зм"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/goldCoinsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="0"
                    android:textAlignment="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/border"/>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="см"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/silverCoinsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="0"
                    android:textAlignment="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/border"/>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="мм"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/copperCoinsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="0"
                    android:textAlignment="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>