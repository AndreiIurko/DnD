<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="6dp">

    <TextView
        android:id="@+id/actionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chargesCountText"
        android:textSize="20sp"
        android:text="ActionName"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/chargesCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/increaseButton"
        android:layout_marginEnd="6dp"
        android:textSize="24sp"
        android:text="10"
        android:visibility="gone" />


    <ImageButton
        android:id="@+id/increaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/decreaseButton"
        android:background="?backgroundColor"
        android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/decreaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/increaseButton"
        android:background="?backgroundColor"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        android:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>