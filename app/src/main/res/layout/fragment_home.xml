<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">



    <TextView
            android:id="@+id/charactersListButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лист персонажей"
            android:layout_marginTop="300dp"
            android:clickable="true"
            android:textSize="32sp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="10dp"
            android:background="@drawable/border_24_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/directoryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="32sp"
            android:background="@drawable/border_24_red"
            android:paddingHorizontal="24dp"
            android:alpha="0.5"
            android:paddingVertical="10dp"
            android:text="Справочная"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/charactersListButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>